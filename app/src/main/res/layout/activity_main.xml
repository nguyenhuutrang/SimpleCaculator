<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtv_show"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#d9d3d3"
        android:gravity="right"
        android:text="0"
        android:textSize="90dp" />

    <View
        android:layout_height="15dp" />
    <TableRow
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btn_ce"
            android:text="CE"
            android:padding="15dp"
            android:textSize="30dp"
            />

        <Button
            android:id="@+id/btn_c"
            android:text="C"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_bs"
            android:text="BS"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_div"
            android:text="/"
            android:padding="15dp"
            android:textSize="30dp" />

    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_mul"
            android:text="X"
            android:padding="15dp"
            android:textSize="30dp" />

    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:padding="15dp"
            android:textSize="30dp"
            />

        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_sub"
            android:text="-"
            android:padding="15dp"
            android:textSize="30dp" />

    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:padding="15dp"
            android:textSize="30dp"
            />

        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_plus"
            android:text="+"
            android:padding="15dp"
            android:textSize="30dp" />

    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btn_dau"
            android:text="+/-"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_dot"
            android:text="."
            android:padding="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_result"
            android:text="="
            android:padding="15dp"
            android:textSize="30dp" />

    </TableRow>

</TableLayout>